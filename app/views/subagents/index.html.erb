<p id="notice"><%= notice %></p>

<h1>Subagents</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subagents.each do |subagent| %>
      <tr>
        <td><h2><%= link_to subagent.name,  masteragent_agent_subagent_shops_path(@masteragent, @agent, subagent)%></h2></td>
        <td><%= link_to 'Show', masteragent_agent_subagent_path(@masteragent, @agent, subagent) %></td>
        <td><%= link_to 'Edit', edit_masteragent_agent_subagent_path(@masteragent, @agent, subagent) %></td>
        <td><%= link_to 'Destroy', [@masteragent, @agent, subagent], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style='width: 800px;'>
  <div id="multi_markers" style='width: 800px; height: 400px;'></div>
</div>
<%= link_to 'New Subagent', new_masteragent_agent_subagent_path %>




<script type="text/javascript">
  var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
  var markers = handler.addMarkers([
    { lat: 43, lng: 3.5},
    { lat: 45, lng: 4},
    { lat: 47, lng: 3.5},
    { lat: 49, lng: 4},
    { lat: 51, lng: 3.5}
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
